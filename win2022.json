  "provisioners": [
    {
      "type": "powershell",
      "inline": [
        "ipconfig /all",
        "set-disk 1 -ErrorAction Stop -IsOffline $false",
        "get-partition",
        "get-partition -DiskNumber 1 | Set-Partition -NewDriveletter D",
        "get-partition"
      ]
    }
